<%-include('partials/header')%>
<% if (error) {%>
    <div class="alert alert-info alert-dismissible fade show position-absolute w-100" role="alert">
        <symbol id="check-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </symbol>
        <%=error%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%} %>
    <div class="mb-5 invisible">ah</div>

    
<main class="">
    <div class="container w-75">
        <% blogs.forEach(function(blog){%>
            <div class="blogSet border-bottom">
                <div class="top d-flex">
                    <img class="me-2" width="23" height="23" src="https://img.icons8.com/ios/50/guest-male.png" alt="guest-male"/>
                    <p class="fs-6 me-2"><%= blog.author %></p> 
                    <span>date</span>
                </div>
                <h4><%= blog.title %></h4>
                <p><%= blog.description %></p>
                <div class="bottom d-flex fs-6 fw-lighter">
                    <p class="me-2 fw-lighter"><%= blog.tags %></p>
                    <p class="me-2 fw-lighter"><%= blog.reading_time %> read</p>
                    <p class="fw-lighter"><%= blog.read_count %></p>
                </div>
            </div>
        <%}) %>
    </div>
</main>


<%-include('partials/footer')%>
